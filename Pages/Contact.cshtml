@page
@model Designo.Website.Pages.ContactsModel
@using Designo.Website.Models;
@{
    ViewData["Title"] = "Contacts";
    ViewData["footer_absolute_display"] = "hidden";
    ViewData["footer_body_margin"] = "96px";
    var showEmailIcon = ViewData["email_invalid"] ?? false;
}

<style>
    #contact-section {
        background-image: url('/assets/shared/desktop/bg-pattern-two-circles.svg');
    }

    @@media(min-width: 768px) {

        #contact-section {
            background-image: url('assets/shared/desktop/bg-pattern-small-circle.svg');
            background-size: 640px;
            background-position-x: -80px;
            background-position-y: -192px;
        }
    }

</style>

<div class="pb-[160px]">

    <div class="bg-[#E7816B] bg-no-repeat text-white h-[764px] flex flex-col px-[24px] py-[83px] md:h-[711px] md:w-[87%] md:mx-auto md:rounded-lg md:px-[60px] lg:flex-row lg:h-[480px]" id="contact-section"
    >

        <!--Contact description-->
        <div class="grow flex items-center flex-col gap-[38px] md:items-start lg:w-[60%] lg:pt-[44px] lg:pr-[93px]">
            <p class="text-[32px] font-medium">Contact Us</p> 

            <p class="text-center leading-[25px] md:text-left">
                Ready to take it to the next level? Let’s talk about your project or idea and find out how we can help your business grow. If you are looking for unique digital experiences that’s relatable to your users, drop us a line.
            </p>
        </div>

        <!--Contact Form-->
        <div class="grow lg:w-[40%]">
            <form class="flex flex-col items-center justify-between h-full text-[15px]" method="post">

                <input placeholder="Name" asp-for="Customer.Name" class="w-full bg-transparent border-b border-white border-solid focus:outline-none placeholder-white placeholder-opacity-50 pb-[6px] px-[20px] focus:border-b-[3px] cursor-pointer" />

                <div class="relative w-full">
                    <input placeholder="Email Address" asp-for="Customer.Email" class="w-full bg-transparent border-b border-white border-solid focus:outline-none placeholder-white placeholder-opacity-50 pb-[6px] px-[20px] focus:border-b-[3px] cursor-pointer" />
                    <div class="flex absolute right-0 top-0 gap-[12px]">
                        <span asp-validation-for="Customer.Email" class="italic"></span>
                        @if((bool) showEmailIcon) {
                            <span><img src="~/assets/shared/desktop/caution-svg.svg"/></span>
                        }
                    </div>
                </div>


                <input placeholder="Phone" asp-for="Customer.Phone" class="w-full bg-transparent border-b border-white border-solid focus:outline-none placeholder-white placeholder-opacity-50 pb-[6px] px-[20px] focus:border-b-[3px] cursor-pointer" />

                <textarea placeholder="Your Message" asp-for="Customer.Message" class="w-full bg-transparent border-b border-white border-solid focus:outline-none pb-[6px] placeholder-white placeholder-opacity-50 resize-none h-[96px] max-h-[96px] px-[20px] focus:border-b-[3px] cursor-pointer"></textarea>

                <button class="bg-white w-[152px] text-black hover:bg-[#FFAD9B] font-medium py-2 px-4 rounded uppercase md:self-end hover:text-white" style="z-index: 4;">
                    SUBMIT
                </button>

            </form>
        </div>

    </div>

    <!--Locations-->
    <div class="relative w-[87%] mx-auto mt-[92px] flex flex-col gap-[48px] md:flex-row md:justify-around">
        @foreach (var location in Model.Locations)
        {
            <partial name="_LocationIllustration" for="@location" />
        }

        <!--bottom Leaf-->
        <img class="hidden absolute top-[125px] z-[-2] right-[-13%] max-w-[1006px] w-full h-[594px] lg:block" src="~/assets/shared/desktop/bg-pattern-leaf.svg">
    </div>
</div>
